//        position.xy = vec2(0, -1);
//        velocity.x = hash11(velocity.x + time) - 0.5;
//        velocity.y = hash11(velocity.y + time) * 2;
//    }

    if(position.y < 0){
        position.y = 0;
        velocity = vec3(0);
    }


    particle.velocity = velocity;
    particle.position.xyz = position;
    particleOut[index] = particle;
}